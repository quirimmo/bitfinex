{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"allowJs": true,
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./build",
		"rootDir": "./",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "scripts", "acceptance-tests", "webpack", "jest", "src/setupTests.ts"],
	"types": ["typePatches"]
}
